{
  "name": "darrynten/xero-php",
  "description": "PHP Client for the Xero API",
  "type": "library",
  "require": {
    "php": "^7.0",
    "guzzlehttp/guzzle": "^6.2.1",
    "darrynten/any-cache": "^1.0",
    "xero/xerooauth-php": "^0.8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.0",
    "mockery/mockery": "dev-master",
    "internations/http-mock": "^0.8.1",
    "codacy/coverage": "dev-master",
    "codeclimate/php-test-reporter": "dev-master"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "DarrynTen\\Xero\\": "src/",
      "DarrynTen\\Xero\\Tests\\": "tests/"
    },
    "exclude-from-classmap": ["/Tests/"]
  }
}
